<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义轮播广告-->
    <declare-styleable name="BannerView">
        <!--点选中的颜色值-->
        <attr name="dotIndicatorFocus" format="color|reference" />
        <!--点默认的颜色值-->
        <attr name="dotIndicatorNormal" format="color|reference" />
        <!--点的大小-->
        <attr name="dotSize" format="dimension" />
        <!--点的间距-->
        <attr name="dotDistance" format="dimension" />
        <!--点的位置-->
        <attr name="dotGravity" format="enum">
            <enum name="left" value="-1"></enum>
            <enum name="center" value="0"></enum>
            <enum name="right" value="1"></enum>
        </attr>
        <!--底部的颜色-->
        <attr name="bottomColor" format="color"></attr>
        <!--定义图片宽高比-->
        <attr name="withProportion" format="float" />
        <attr name="heightProportion" format="float" />
    </declare-styleable>

    <!--自定义字体变色-->
    <declare-styleable name="ColorTrackTextView">
        <!--没改变时的颜色-->
        <attr name="origninColor" format="color" />
        <!--改变时的颜色-->
        <attr name="changeColor" format="color" />
    </declare-styleable>

    <!--自定义ViewPager指示器-->
    <declare-styleable name="TrackIndicatorView">
        <attr name="tabVisibleNum" format="integer" />
    </declare-styleable>

    <!--自定义密码输入框-->
    <declare-styleable name="PasswordEditText">
        <!--没改变时的颜色-->
        <attr name="passwordNumber" format="integer"/>
        <!--密码圆点的半径-->
        <attr name="passwordRadius" format="dimension"/>
        <!--密码圆点的颜色-->
        <attr name="passwordColor" format="color"/>
        <!--分割线的颜色-->
        <attr name="divisionLineColor" format="color"/>
        <!--分割线的大小-->
        <attr name="divisionLineSize" format="dimension"/>
        <!--背景边框的颜色-->
        <attr name="bgColor" format="color"/>
        <!--背景边框的大小-->
        <attr name="bgSize" format="dimension"/>
        <!--背景边框圆角的大小-->
        <attr name="bgCorner" format="dimension"/>
    </declare-styleable>


    <!--自定义TextView-->
    <declare-styleable name="TextView">
    <!--文字-->
    <attr name="text" format="string"/>
    <!--文字颜色-->
    <attr name="textColor" format="color"/>
    <!--文字大小-->
    <attr name="textSize" format="dimension"/>
    <!--显示的最大行数-->
    <attr name="maxLength" format="integer"/>
    <!--文字输入类型-->
    <attr name="inputType">
        <enum name="number" value="1"/>
        <enum name="text" value="2"/>
        <enum name="password" value="3"/>
    </attr>
    </declare-styleable>

    <!--仿QQ计步器效果-->
    <declare-styleable name="QQStepView">
        <!--外面的颜色-->
        <attr name="outerColor" format="color"/>
        <!--里面的颜色-->
        <attr name="innerColor" format="color"/>
        <!--圆弧的宽度-->
        <attr name="borderWidth" format="dimension"/>
        <!--字体的大小-->
        <attr name="stepTextSize" format="dimension"/>
        <!--字体的颜色-->
        <attr name="stepTextColor" format="color"/>
    </declare-styleable>
    </resources>
